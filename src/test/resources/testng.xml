<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="SauceDemo Test Automation Suite" parallel="classes" thread-count="3" verbose="2">

    <listeners>
        <listener class-name="com.saucedemo.listeners.TestListener"/>
    </listeners>

    <parameter name="browser" value="chrome"/>

    <test name="Regression Tests - Order Placement">
        <classes>
            <class name="com.saucedemo.tests.LoginTest"/>
            <class name="com.saucedemo.tests.CartTest"/>
            <class name="com.saucedemo.tests.regresion.OrderPlacementTest"/>
        </classes>
    </test>

    <test name="Login Tests" enabled="false">
        <classes>
            <class name="com.saucedemo.tests.LoginTest"/>
        </classes>
    </test>

    <test name="Cart Tests" enabled="false">
        <classes>
            <class name="com.saucedemo.tests.CartTest"/>
        </classes>
    </test>

    <test name="Order Placement Tests" enabled="false">
        <classes>
            <class name="com.saucedemo.tests.regresion.OrderPlacementTest"/>
        </classes>
    </test>

</suite>

